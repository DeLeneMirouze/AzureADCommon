@using System.Security.Principal
@using System
@using CommonLibrary.Resource

@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">@string.Format(Resources.Login_Hello,  User.Identity.Name)</li>
        <li><a asp-area="" asp-controller="Account" asp-action="SignOut">@Resources.Login_Signout</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Signin">@Resources.Login_Signin</a></li>
    </ul>
}
